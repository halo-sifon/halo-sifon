{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "declaration": true,
    "outDir": "types",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "resolveJsonModule": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}